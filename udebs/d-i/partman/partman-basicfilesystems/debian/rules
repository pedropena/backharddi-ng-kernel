#!/usr/bin/make -f
# Sample debian/rules that uses debhelper.
# GNU copyright 1997 to 1999 by Joey Hess.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

PACKAGE = partman-basicfilesystems

build:
# Ye olde no-op.

clean:
	dh_testdir
	dh_testroot
	rm -f `find . -name '*~'`
	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	debian/install-rc choose_method
	debian/install-rc active_partition
	debian/install-rc valid_filesystems
	debian/install-rc init.d
	debian/install-rc commit.d
	debian/install-rc finish.d
	debian/install-rc mount.d
	debian/install-rc update.d
	dh_install fstab.d lib/partman
	dh_install parted_names lib/partman
	dh_install mountoptions lib/partman
	dh_install select_mountpoint bin
	dh_install select_mountoptions bin
	dh_install get_mountoptions bin
	rm -rf `find debian/$(PACKAGE) -name CVS`
	rm -rf `find debian/$(PACKAGE) -name .svn`

binary-indep: build install
	dh_testdir
	dh_testroot
	dh_installdebconf
	dh_fixperms
	dh_installdeb
	dh_gencontrol
	dh_builddeb

binary-arch: build install

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install
